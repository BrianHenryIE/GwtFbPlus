<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:rs="urn:import:ie.sortons.gwtfbplus.client.widgets.buttons">
  <ui:style type="ie.sortons.gwtfbplus.client.widgets.popups.FbGenericPopup.Styles">
 	.popup {
		background-color: transparent;
		border-color: transparent;
	    
	}
	
	.gwt-PopupPanel {
	    background-color: transparent;
	    border: none;
	    padding: 0;
	}
		
	.popup .popupContent {
		/* Not useful? it exists in the popup panel anyway */
	
	}
	
	.popupGlass {
		background-color: transparent; /* White glass */
  		opacity: 0.6;
  		filter: alpha(opacity=60);
	}
	
  	.panel {
	
		font-family: "lucida grande",tahoma,verdana,arial,sans-serif;
	    font-size: 11px;
	    font-weight: normal;
	    
		width: 420px;
		text-align: left;
		
  		background: none repeat scroll 0 0 rgba(82, 82, 82, 0.7);
	    border-radius: 8px 8px 8px 8px;
	    padding: 10px;
  		
  	}
  	
  	
  	
  	.loading{
		background: none repeat scroll 0 0 #F2F2F2;
	    padding: 8px 10px;
	    border: 1px solid #333333;
	    
		font-size: 20px;
	}
  	
    .header { 
	 	color: #FFFFFF;
	    font-size: 13px;
	    font-weight: bold;
		background-color: #6D84B4;
		border-style: solid solid none;
		border-color:#3B5998;
		padding: 5px 10px;
		border-width: 1px;
	}
	
	.container {
		border-style: none solid solid solid;
		border-color: #333333;
		border-width: 1px;
		background-color: #FFFFFF;
	}
	
	.details {
		font-weight: normal;
		font-size:	11px;
		
		padding: 10px;
		
	}
	
	.footer {
		background: none repeat scroll 0 0 #F2F2F2;
	    padding: 8px 10px;
	    position: relative;
	    text-align: right;
	    border-top: 1px solid #CCCCCC;
	    
	}


	.highlightMessage {
	
		background-color: #FFF9D7;
		border: 1px solid #E2C822;
		padding: 5px;
		color: #333;
		
		display:none;
	}
	
	.note {
		display:none;
		padding-bottom: 5px;
	}
	
	.inputQuestion {
		display:none;
	
	}
			
	.userInputBox {
		width: 388px;
		display:none;
	}
	

	
	.buttons {
	
		font-size:13px;
		line-height: inherit;

	}

	.cancelButton {
		display:none;
	}

	.addWidget{
		/*display:none; Actually SimplePanel will not take up any space when empty, will just be an empty div */
	}
  </ui:style>
  
  
  <g:HTMLPanel addStyleNames="{style.panel}">
  
  
  	<g:HTMLPanel ui:field="loading" addStyleNames="{style.loading}">Loading...</g:HTMLPanel>
  
  	<g:HTMLPanel ui:field="body">
	  
	    <g:HTMLPanel ui:field="header" addStyleNames="{style.header}">
	    	<g:Label ui:field="title">Title</g:Label>
	    </g:HTMLPanel>
	    
	    <g:HTMLPanel ui:field="container"  addStyleNames="{style.container}">
	    
	    	<g:HTMLPanel ui:field="details" addStyleNames="{style.details}">
	    	
	    		
	    	
	    		<g:Label ui:field="highlight" addStyleNames="{style.highlightMessage}">Friendly Error Message</g:Label>
		    	
		    	<g:Label ui:field="note" addStyleNames="{style.note}">Are you sure?</g:Label>
		    	
		    	<g:Label ui:field="textAreaQuestion" addStyleNames="{style.inputQuestion}">Please explain:</g:Label>
			    <g:TextArea ui:field="input" addStyleNames="{style.userInputBox}"/>
			    
			    <g:SimplePanel ui:field="addWidget" addStyleNames="{style.addWidget}"/>
		    
	  		</g:HTMLPanel>
		 	
		 	<g:HTMLPanel ui:field="footer" addStyleNames="{style.footer}">
			    <rs:BlueButton ui:field="okButton" addStyleNames="{style.buttons}">Yes</rs:BlueButton>
			    <rs:GreyButton ui:field="cancelButton" addStyleNames="{style.buttons} {style.cancelButton}">No</rs:GreyButton>
		    </g:HTMLPanel>
		    
	    </g:HTMLPanel>
	    
    </g:HTMLPanel>
    
  </g:HTMLPanel>
  
</ui:UiBinder> 