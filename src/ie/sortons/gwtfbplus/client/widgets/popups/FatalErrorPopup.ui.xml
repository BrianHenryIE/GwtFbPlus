<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:rs="urn:import:ie.sortons.gwtfbplus.client.widgets.buttons">
  <ui:style type="ie.sortons.gwtfbplus.client.widgets.popups.FatalErrorPopup.Styles">
  	.popup {
		border: 1px solid #d34d2b;
		
		overflow: hidden;
	}
	.popup .popupContent {
		/* Not useful? it exists in the popup panel anyway */
	
	}
	
	.popupGlass {
		background-color: #fff; /* White glass */
  		opacity: 0.6;
  		filter: alpha(opacity=60);
	}
	
  	.panel {
		width: 350px;
		text-align: left;
		background-color: #fdece9;
		padding: 5px 10px;
		
		
		 
  		font-family:	"lucida grande",tahoma,verdana,arial,sans-serif;
  		opacity: 1;
  		
  	}
    .header { 
		font-weight: bold;
		font-size:	11px;
	}
	
	.details {
		font-weight: normal;
		font-size:	11px;
		
		background-color: #fdece9; 
		opacity: 1;
	}
	
	
	
	
  </ui:style>
  
  
    <g:HTMLPanel addStyleNames="{style.panel}">
      <g:Label addStyleNames="{style.header}">Oops, something went wrong!</g:Label>
      <g:FlowPanel addStyleNames="{style.details}">
      
        <g:HTML ui:field="errorDetail"></g:HTML>
        
        <rs:BlueButton ui:field="okButton" >Reload</rs:BlueButton>
        <rs:GreyButton ui:field="traceButton" >Stack Trace</rs:GreyButton>
        <rs:GreyButton ui:field="supportButton" >Support</rs:GreyButton>
        
      </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder> 